<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/proyecto?useSSL=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        
          <mapping  resource="Tablas/Articulo.hbm.xml"/>
          <mapping  resource="Tablas/Categoria.hbm.xml"/>
          <mapping  resource="Tablas/Cliente.hbm.xml"/>
          <mapping  resource="Tablas/Sociedad.hbm.xml"/>
          <mapping  resource="Tablas/CustomerInvoices.hbm.xml"/>
          <mapping  resource="Tablas/CustomerLineItems.hbm.xml"/>
          <mapping  resource="Tablas/Proveedor.hbm.xml"/>
          <mapping  resource="Tablas/SupplierInvoiceLineItems.hbm.xml"/>
          <mapping  resource="Tablas/SupplierInvoices.hbm.xml"/>
          <mapping  resource="Tablas/Usuario.hbm.xml"/>
        
    </session-factory>
</hibernate-configuration>
